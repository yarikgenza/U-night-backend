{
  "name": "U-night-backend",
  "version": "1.0.0",
  "description": "server for the U-night app",
  "main": "index.js",
  "private": true,
  "repository": "https://github.com/yarikgenza/U-night-backend",
  "author": "yarikgenza <gsmeter@gmail.com>",
  "license": "Commercial",
  "scripts": {
    "start": "node_modules/cross-env/dist/bin/cross-env.js NODE_ENV=development ./node_modules/.bin/babel-node ./src/index.js",
    "dev": "node_modules/cross-env/dist/bin/cross-env.js NODE_ENV=development nodemon --exec ./node_modules/.bin/babel-node ./src/index.js",
    "prod": "npm run build && cross-env NODE_ENV=production npm run serve",
    "test-server": "node_modules/cross-env/dist/bin/cross-env.js NODE_ENV=test ./node_modules/.bin/babel-node ./src/index.js",
    "test": "./node_modules/mocha/bin/mocha --recursive",
    "build": "babel src -d dist",
    "serve": "node dist/index.js",
    "lint": "./node_modules/.bin/eslint ./src",
    "fixcode": "./node_modules/.bin/eslint ./src --fix",
    "migrate-dev": "node_modules/cross-env/dist/bin/cross-env.js NODE_ENV=development ./node_modules/.bin/babel-node ./migrate-db",
    "migrate-test": "node_modules/cross-env/dist/bin/cross-env.js NODE_ENV=test ./node_modules/.bin/babel-node ./migrate-db",
    "precommit": "npm run git-hook",
    "prepush": "npm run git-hook",
    "git-hook": "npm run lint",
    "postinstall": "npm run migrate-dev && rm -rf ./migrations/.migrate && npm run migrate-test"
  },
  "dependencies": {
    "app-module-path": "^2.2.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "chakram": "^1.5.0",
    "colors": "^1.1.2",
    "express": "^4.16.2",
    "migrate": "^0.2.4",
    "moment": "^2.19.1",
    "mongoose": "^4.12.5",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-facebook-token": "^3.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.1.1",
    "eslint": "^4.10.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-mocha": "^4.11.0",
    "husky": "^0.14.3",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1"
  }
}
